<!--index.wxml-->
<view class="container">
  <view bindtap="upload" class="userinfo">
    <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text>
  </view>
  <view wx:if="{{!condition}}" class="usermotto">
    <text class="user-motto">{{motto}}</text>
  </view>
</view>
<loading hidden="{{loadingHidden}}">
	加载中...
</loading>
  <!--<button class="btn-choose-img" type="default" bindtap="upload"> choose a photo </button>-->

<view wx:if="{{condition}}"> 
  <image src="{{tmpFilePaths }}" mode="aspectFit"/>
</view>
<view wx:if="{{condition}}" class="result-tips"> 
  匹配结果：
</view>
<view wx:for="{{Industry}}" wx:key="{{index}}" class="flow">
  <image src="http://www.eyekey.com{{item.url}}" mode="aspectFit"></image>
  <view class="user-name"> {{item.people_name}} </view>
  <view class="similar"> 
    相似度：{{item.similarity}}% 
  </view>
</view>