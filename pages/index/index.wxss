/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 400rpx;
}

.btn-choose-img {
  margin: 20rpx;
}

.result-tips {
  text-align: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin: 40rpx 10px;
  background-color: #f0f0f0;
  border-radius: 5px;
}

.flow {
  border-bottom: 1px solid #eee;
  text-align: center;
  margin: 0 0 20rpx 0;
  padding-bottom: 20rpx;
}

.user-name {
  display: block;
  color: rgb(41, 128, 185);
  font-size: 12px;
}

.similar {
  margin-left: 20rpx;
  display: inline-block;
  color: #aaa;
  font-size: 12px;
}

#my_pic {
  text-align: center;
}

#footer {
  position: absolute;
  bottom: 0;
  left: 20%;
  width: 60%;
  text-align: center;
  line-height: 20px;
  font-size: 12px;
  color: #999;
}